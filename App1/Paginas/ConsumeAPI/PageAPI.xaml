<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Paginas.ConsumeAPI.PageAPI">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            
            <Label x:Name="lblDatos" Text="Id" ></Label>
            <Entry Placeholder="Id" x:Name="txtId" />
            <Entry Placeholder="Nombre" x:Name="txtNombre" />
            <Entry Placeholder="Especie" x:Name="txtEspecie" />
            <Entry Placeholder="Raza" x:Name="txtRaza" />
            <Entry Placeholder="Edad" x:Name="txtEdad" />
            <Entry Placeholder="Nro. Chip" x:Name="txtNroChip" />
            <Button Text="Leer datos" Clicked="Button_Clicked"></Button>
            <Button Text="Insertat" Clicked="Button_Clicked_1"></Button>
            <Button Text="Actualziar" Clicked="Button_Clicked_2"></Button>
            <Button Text="Borrar" Clicked="Button_Clicked_3"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>